<!-- <script setup lang="ts">
import { useDamageCalculator } from "@/composables/useDamageCalculator";
import { useDamageCalcStore } from "@/stores/damageCalc";
import {
    TERRAIN_TYPES,
    WEATHER_TYPES,
    ZONE_TYPES,
    POKEMON_TYPES
