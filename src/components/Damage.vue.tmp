                            <div class="status-group">
                                <span class="status-label">妨害</span>
                                <div class="icon-row">
                                    <button v-for="(item, idx) in Object.values(HindranceMap)" :key="idx"
                                        class="icon-btn" :class="{ active: store.user.hindrance[item.cnName] }"
