{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2022", 
    "lib": [
      "ES2022", 
      "DOM", 
      "DOM.Iterable"
    ],
    
    "module": "ES2022", 
    "moduleResolution": "bundler", 
    
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}